<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_image"
    android:layout_width="match_parent"
    app:cardUseCompatPadding="true"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    >
    <RelativeLayout
        android:id="@+id/top1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_user_image"
            android:layout_width="50dp"
            android:src="@drawable/sw"
            android:layout_centerVertical="true"
            android:layout_height="40dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/post_user_image"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp" android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/post_user_image">

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/post_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="17sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/post_timestamp"
                android:textSize="10dp"
                android:singleLine="true"
                android:text="asdasdasd"
                android:layout_below="@+id/post_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="MissingPrefix"

                />

            <ImageView
                android:id="@+id/report_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:visibility="gone"
                android:layout_alignParentRight="true"/>

            <TextView
                android:visibility="gone"
                android:id="@+id/postimage"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/round_background_tag"
                android:text="Solve"
                android:textColor="@color/white"
                android:padding="10dp" android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>